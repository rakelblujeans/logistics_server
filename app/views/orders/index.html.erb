<h1>Listing orders</h1>

<table>
  <thead>
    <tr>
      <th>Order state</th>
      <th>Delivery type</th>
      <th>Full address</th>
      <th>Shipping name</th>
      <th>Shipping city</th>
      <th>Shipping state</th>
      <th>Shipping zip</th>
      <th>Shipping country</th>
      <th>Shipping apt suite</th>
      <th>Shipping notes</th>
      <th>Arrival date</th>
      <th>Departure date</th>
      <th>Language</th>
      <th>Num phones</th>
      <th>Fedex out code</th>
      <th>Fedex return code</th>
      <th>Customer</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.order_state %></td>
        <td><%= order.delivery_type %></td>
        <td><%= order.full_address %></td>
        <td><%= order.shipping_name %></td>
        <td><%= order.shipping_city %></td>
        <td><%= order.shipping_state %></td>
        <td><%= order.shipping_zip %></td>
        <td><%= order.shipping_country %></td>
        <td><%= order.shipping_apt_suite %></td>
        <td><%= order.shipping_notes %></td>
        <td><%= order.arrival_date %></td>
        <td><%= order.departure_date %></td>
        <td><%= order.language %></td>
        <td><%= order.num_phones %></td>
        <td><%= order.fedex_out_code %></td>
        <td><%= order.fedex_return_code %></td>
        <td><%= order.customer %></td>
        <td><%= order.phone %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

