<h1>Listing order_payments</h1>

<table>
  <thead>
    <tr>
      <th>Bt trans</th>
      <th>Discount code</th>
      <th>Shipping string</th>
      <th>Referral code</th>
      <th>Rental charge</th>
      <th>Shipping charge</th>
      <th>Rental discount</th>
      <th>Tax charge</th>
      <th>Payment amount</th>
      <th>Payment date</th>
      <th>Payment status</th>
      <th>Discount string</th>
      <th>Last 4 digits</th>
      <th>Refunded</th>
      <th>Order</th>
      <th>Credit card</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_payments.each do |order_payment| %>
      <tr>
        <td><%= order_payment.bt_trans_id %></td>
        <td><%= order_payment.discount_code %></td>
        <td><%= order_payment.shipping_string %></td>
        <td><%= order_payment.referral_code %></td>
        <td><%= order_payment.rental_charge %></td>
        <td><%= order_payment.shipping_charge %></td>
        <td><%= order_payment.rental_discount %></td>
        <td><%= order_payment.tax_charge %></td>
        <td><%= order_payment.payment_amount %></td>
        <td><%= order_payment.payment_date %></td>
        <td><%= order_payment.payment_status %></td>
        <td><%= order_payment.discount_string %></td>
        <td><%= order_payment.last_4_digits %></td>
        <td><%= order_payment.refunded %></td>
        <td><%= order_payment.order %></td>
        <td><%= order_payment.credit_card %></td>
        <td><%= link_to 'Show', order_payment %></td>
        <td><%= link_to 'Edit', edit_order_payment_path(order_payment) %></td>
        <td><%= link_to 'Destroy', order_payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

